<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PopupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optionsHeader"
        android:background="@color/colorLightBlue"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:padding="8dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/popupBackBtn"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="?android:attr/actionBarItemBackground"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            style="@style/SelectableItemBackground" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/popupForwardBtn"
            android:layout_toEndOf="@id/popupBackBtn"
            android:src="@drawable/ic_baseline_arrow_forward_24"
            android:background="?android:attr/actionBarItemBackground"
            android:layout_centerVertical="true"
            style="@style/SelectableItemBackground" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/popupCancelBtn"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_clear_white_24"
            android:background="?android:attr/actionBarItemBackground"
            android:layout_centerVertical="true"
            style="@style/SelectableItemBackground" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/optionsHeader">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/personProfileImage"
                android:src="@drawable/ic_baseline_person_75"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:translationZ="100dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profileHeader"
                android:layout_marginTop="55dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:translationZ="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/popupName"
                        tools:text="Name"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="35dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/credentialsLayout"
                        android:layout_marginTop="6dp"
                        android:layout_below="@id/popupName"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/popupPhoneNumber"
                            tools:text="Phone Number"
                            android:layout_marginEnd="10dp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#808080"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/popupEmailAddress"
                            tools:text="Email Address"
                            android:layout_marginStart="10dp" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileHeader"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                android:paddingStart="25dp"
                android:paddingEnd="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/popupProfileStatus"
                    tools:text="Profile Status"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Friends"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/popupListOfFriends" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>