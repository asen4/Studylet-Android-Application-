<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView1">

        <ImageView
            android:layout_width="280dp"
            android:layout_height="220dp"
            android:id="@+id/imageContact"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_baseline_person_black_250"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameContact"
            android:textColor="@color/colorPrimary"
            android:text="Username"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/imageContact"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="43dp"
            android:id="@+id/videoCallBtn"
            android:layout_below="@id/nameContact"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginBottom="14dp"
            android:padding="5dp"
            android:drawableTop="@drawable/ic_baseline_video_call_24"
            android:drawableTint="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>